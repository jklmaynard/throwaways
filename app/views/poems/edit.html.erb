<div class="container">
  <h2>Edit <%= @poem.name %></h2>

  <%= form_for @poem do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  <% end %>

  <% @lines.each do |line| %>
    <%= form_for [@poem, line] do |f| %>
      <div class="form-group">
        <%= f.label 'line ' + line.line_number.to_s, class: "col-md-2" %>
        <%= f.text_field :line, class: "col-md-4", style: "margin-right:10px;" %>
        <%= f.submit :class => "btn btn-success btn-sm" %>
      </div>
    <% end %>
  <% end %>



</div>
