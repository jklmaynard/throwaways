<div class="container">
  <h2><%= @poem.name %></h2>

  <% if @poem.lines.any? %>
    <ul>
      <% @poem.lines.each do |line| %>
        <li><%= line.line %></li>
      <% end %>
    </ul>
  <% end %>


  <div class="form-horizontal">
    <%= form_for [@poem, @line], :html => {:class => "form-horizontal-center"} do |f| %>
    <div class="form-group">
      <div class="col-md-8">
        <h4>Add Lines</h4>
        <%= f.label :line_number %>
      </div>
      <div class="col-md-8">
        <%= f.text_field :line_number, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-8">
        <%= f.label :stanza_number %>
      </div>
      <div class="col-md-8">
        <%= f.text_field :stanza_number, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-8">
        <%= f.label :line %>
      </div>
      <div class="col-md-8">
        <%= f.text_field :line, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-8">
        <% f.hidden_field :poem_id, value: @poem.id %>
        <%= f.submit :class => "btn btn-primary btn-sm" %>
      </div>
    </div>


    <% end %>
  </div>



</div>
