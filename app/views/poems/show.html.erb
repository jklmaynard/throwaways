<div class="container">
  <h2><%= @poem.name %></h2>

  <% if @poem.lines.any? %>
    <ul id=stanza_one style="list-style-type:none; display:block">
      <% @poem.lines.each do |line| %>
        <% if line.stanza_number == 1 %>
          <li><%= line.line %></li>
        <% end %>
      <% end %>
    </ul>
    <ul id=stanza_two style="list-style-type:none; display:block;">
      <% @poem.lines.each do |line| %>
        <% if line.stanza_number == 2 %>
        <li><%= line.line %></li>
      <% end %>
    <% end %>    </ul>
    <ul id=stanza_three style="list-style-type:none; display:block;">
      <% @poem.lines.each do |line| %>
        <% if line.stanza_number == 3 %>
        <li><%= line.line %></li>
      <% end %>
    <% end %>
    </ul>
    <ul id=stanza_four style="list-style-type:none; display:block;">
      <% @poem.lines.each do |line| %>
        <% if line.stanza_number == 4 %>
        <li><%= line.line %></li>
      <% end %>
    <% end %>
    </ul>
  <% end %>

  <% if current_user %>
    <div class="form-horizontal">
      <%= form_for [@poem, @line], :html => {:class => "form-horizontal-center"} do |f| %>
      <div class="form-group">
        <div class="col-md-8">
          <h4>Add Lines</h4>
          <%= f.label :line_number %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :line_number, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-8">
          <%= f.label :stanza_number %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :stanza_number, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-8">
          <%= f.label :line %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :line, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-8">
          <% f.hidden_field :poem_id, value: @poem.id %>
          <%= f.submit :class => "btn btn-primary btn-sm" %>
        </div>
      </div>
      <% end %>
    </div>
  <% end %>
</div>
